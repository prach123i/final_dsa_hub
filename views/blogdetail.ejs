<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= blog.title %></title>
    <link rel="stylesheet" href="/css/blogdetail.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Blog Title -->
        <h1 class="mt-4" style="color: white;"><i class="fas fa-book-open"></i> <%= blog.title %></h1>

        <!-- Author Info -->
        <div class="author-info">
            <span style="font-size:2.5rem;color:#6fed6f;">
                <i class="fas fa-user-circle"></i>
            </span>
            <h2><i class="fas fa-user"></i> <%= blog.createdBy ? blog.createdBy.username : 'Anonymous' %></h2>
        </div>

        <!-- Cover Image -->
        <% if (blog.coverImageURL) { %>
            <img src="<%= blog.coverImageURL %>" alt="Cover Image" class="img-fluid mb-4">
        <% } %>

        <!-- Blog Content -->
        <p><%= blog.body %></p>

        <!-- Comment Section -->
        <div class="comment-section mt-4">
            <h3><i class="fas fa-comments"></i> Comments</h3>
            <% if (blog.comments && blog.comments.length > 0) { %>
                <% blog.comments.forEach(comment => { %>
                    <div class="comment">
                        <strong><i class="fas fa-user-circle"></i> <%= comment.createdBy.username %></strong>
                        <small class="text-muted" style="color: whitesmoke !important;"><i class="fas fa-clock"></i> <%= new Date(comment.createdAt).toLocaleString() %></small>
                        <p><%= comment.text %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No comments yet. Be the first to comment!</p>
            <% } %>
        </div>

        <!-- Add a New Comment -->
        <form action="/blog/<%= blog._id %>/comment" method="POST" class="comment-form">
            <div class="mb-3">
                <label for="text" class="form-label"><i class="fas fa-pen"></i> Your Comment</label>
                <textarea class="form-control" id="text" name="text" rows="3" required placeholder="Share your thoughts..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Add Comment</button>
        </form>

        <!-- Back Button -->
        <a href="/blog/show-blogs" class="btn btn-secondary mt-4"><i class="fas fa-arrow-left"></i> Back to All Blogs</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
