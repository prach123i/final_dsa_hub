<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/css/styles.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: #181a1b;
            color: #f1f1f1;
            /* Remove overflow: hidden to allow scrolling */
            /* overflow: hidden; */
        }
        .main {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align to top */
            min-height: 80vh;
            flex-wrap: wrap;
            margin-top: 30px; /* Add margin from top */
        }
        .container {
            background: rgba(34, 40, 49, 0.95);
            border-radius: 18px;
            box-shadow: 0 8px 32px rgba(30,60,114,0.18);
            padding: 40px 32px 32px 32px;
            max-width: 350px;
            width: 100%;
            margin: 32px 0;
            animation: fadeInUp 1s cubic-bezier(.39,.575,.565,1) both;
            box-sizing: border-box;
        }
        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(40px);}
            100% { opacity: 1; transform: none;}
        }
        .container h1 {
            text-align: center;
            color: #6fed6f;
            font-weight: 700;
            margin-bottom: 18px;
            letter-spacing: 1px;
        }
        .container label {
            color: #6fed6f;
            font-weight: 500;
            margin-bottom: 4px;
            display: block;
        }
        .container input[type="text"],
        .container input[type="email"],
        .container input[type="password"] {
            width: 100%;
            padding: 10px 12px;
            margin-bottom: 18px;
            border: 1px solid #2a5298;
            border-radius: 7px;
            font-size: 16px;
            background: #232526;
            color: #f1f1f1;
            transition: border 0.2s, background 0.2s;
            box-sizing: border-box;
        }
        .container input:focus {
            border: 1.5px solid #6fed6f;
            background: #1e222a;
            outline: none;
        }
        .container button[type="submit"] {
            width: 100%;
            background: linear-gradient(90deg, #6fed6f 0%, #2a5298 100%);
            color: #232526;
            font-weight: bold;
            border: none;
            border-radius: 7px;
            padding: 12px 0;
            font-size: 18px;
            margin-top: 8px;
            cursor: pointer;
            transition: background 0.2s, transform 0.15s, color 0.2s;
        }
        .container button[type="submit"]:hover {
            background: linear-gradient(90deg, #2a5298 0%, #6fed6f 100%);
            color: #fff;
            transform: translateY(-2px) scale(1.03);
        }
        .container h5 {
            margin: 10px 0 0 0;
            font-size: 13px;
            text-align: center;
            color: #aaa;
        }
        .container h5 a {
            color: #6fed6f;
            text-decoration: underline;
        }
        .container p {
            text-align: center;
            margin-bottom: 10px;
        }
        .container-right {
            background: transparent;
            border-radius: 18px;
            box-shadow: none;
            padding: 40px 32px 32px 32px;
            max-width: 420px;
            width: 100%;
            margin: 32px auto;
            color: #f1f1f1;
            animation: fadeInUp 1.2s cubic-bezier(.39,.575,.565,1) both;
            box-sizing: border-box;
        }
        .container-right h2 {
            color: #6fed6f;
            font-weight: 700;
            margin-bottom: 10px;
        }
        .container-right p {
            color: #e0eafc;
            margin-bottom: 24px;
        }
        .feature-grid {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }
        .feature {
            display: flex;
            align-items: flex-start;
            gap: 16px;
            background: rgba(30,60,114,0.18);
            border-radius: 10px;
            box-shadow: 0 2px 8px #0002;
            padding: 14px 18px;
        }
        .feature-icon {
            font-size: 32px;
            color: #6fed6f;
            margin-top: 2px;
            animation: iconPulse 2s infinite alternate;
        }
        @keyframes iconPulse {
            0% { transform: scale(1);}
            100% { transform: scale(1.15);}
        }
        .feature h3 {
            margin: 0 0 4px 0;
            font-size: 18px;
            color: #6fed6f;
        }
        .feature p {
            margin: 0;
            font-size: 14px;
            color: #e0eafc;
        }
        /* Navbar styles */
        .navbar {
            width: 100%;
            background: #232526;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 24px;
            box-sizing: border-box;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
        }
        .navbar-logo {
            color: #6fed6f;
            font-size: 1.5rem;
            font-weight: bold;
            letter-spacing: 1px;
            text-decoration: none;
        }
        .navbar-links {
            display: flex;
            align-items: center;
            gap: 24px;
        }
        .navbar-links a {
            color: #f1f1f1;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.2s;
        }
        .navbar-links a:hover {
            color: #6fed6f;
        }
        .navbar-profile {
            margin-left: 18px;
            font-size: 1.7rem;
            color: #6fed6f;
            cursor: pointer;
            border-radius: 50%;
            transition: background 0.2s;
            padding: 4px;
        }
        .navbar-profile:hover {
            background: #2a5298;
            color: #fff;
        }
        .navbar-hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
            margin-left: 18px;
        }
        .navbar-hamburger span {
            height: 3px;
            width: 26px;
            background: #6fed6f;
            margin: 4px 0;
            border-radius: 2px;
            transition: 0.3s;
        }
        @media (max-width: 700px) {
            .navbar-links {
                display: none;
                position: absolute;
                top: 54px;
                right: 0;
                background: #232526;
                flex-direction: column;
                width: 100vw;
                box-shadow: 0 2px 8px #0002;
                padding: 12px 0;
                z-index: 99;
            }
            .navbar-links.active {
                display: flex;
            }
            .navbar-hamburger {
                display: flex;
            }
            .navbar-profile {
                font-size: 2rem;
            }
        }
        @media (max-width: 400px) {
            .navbar {
                padding: 8px 8px;
            }
            .navbar-logo {
                font-size: 1.1rem;
            }
        }
        /* Push content down for fixed navbar */
        body {
            /* Remove or reduce padding-top to avoid hidden content */
            padding-top: 0;
        }
        @media (max-width: 1100px) {
            .main {
                flex-direction: column;
                align-items: stretch;
            }
            .container, .container-right {
                margin: 18px auto;
                max-width: 98vw;
            }
        }
        @media (max-width: 900px) {
            .main, .container-right {
                max-width: 98vw;
            }
            .main {
                flex-direction: column;
                align-items: stretch;
            }
            .container, .container-right {
                margin: 18px auto;
            }
        }
        @media (max-width: 600px) {
            .main {
                flex-direction: column;
                align-items: stretch;
                min-height: unset;
            }
            .container, .container-right {
                padding: 18px 4vw;
                border-radius: 10px;
                max-width: 100vw;
                margin: 10px 0;
            }
            .container {
                box-shadow: 0 2px 8px rgba(30,60,114,0.10);
                padding: 18px 4vw;
            }
            .feature {
                flex-direction: column;
                align-items: flex-start;
            }
            .container-right {
                display: none;
            }
        }
        @media (max-width: 400px) {
            .container {
                padding: 10px 2vw;
            }
        }
    </style>
</head>
<body>

    <div class="main">
    <div class="container">
        <h1>Signup</h1>
        <% if (typeof msg !== 'undefined') { %>
            <p style="color: red;"><%= msg %></p>
        <% } %>
        <% if (typeof error !== 'undefined') { %>
            <p style="color: red;"><%= error %></p>
        <% } %>
        <form action="/api/user/signup" method="POST">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            <br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            <br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <br>
            <h5 >If already have account <a href="/api/user/signin">sign in</a></h5>
            <button type="submit">Sign Up</button>
        </form>
    </div>
</div>
    <!-- <img src="/images/helloji.gif" alt="Background GIF" class="background-gif"/> -->

    <div class="container-right">
        <h2>Welcome to DSA Hub
        </h2>
        <p>Sign in to continue your journey with us.</p>
        <div class="feature-grid">
            <div class="feature">
              <i class="fas fa-tasks feature-icon"></i>
              <div>
              <h3>Curated DSA Problems</h3>
              <p>Access questions tailored for beginners to advanced coders, categorized by difficulty and topic.</p>
            </div>
            </div>
            <div class="feature">
              <i class="fas fa-edit feature-icon"></i>
              <div>
              <h3>Blog Your Journey</h3>
              <p>Share experiences, tips, and insights with others to create a collaborative learning environment.</p>
            </div>
            </div>
            <div class="feature">
              <i class="fas fa-medal feature-icon"></i>
              <div>
              <h3>Earn Achievements</h3>
              <p>Track progress and earn badges as you complete challenges and contribute blogs.</p>
            </div>
            </div>
</div>
    </div>
    <script>
        // Hamburger menu toggle
        const hamburger = document.getElementById('navbarHamburger');
        const links = document.getElementById('navbarLinks');
        hamburger.addEventListener('click', () => {
            links.classList.toggle('active');
        });
        // Allow keyboard accessibility
        hamburger.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
                links.classList.toggle('active');
            }
        });
        // Optional: Close menu when clicking outside (mobile UX)
        document.addEventListener('click', function(event) {
            if (!hamburger.contains(event.target) && !links.contains(event.target)) {
                links.classList.remove('active');
            }
        });
    </script>
</body>
</html>
