    <style>
      /* --- Animated Background --- */
      body {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(135deg, #232526 0%, #414345 100%);
        transition: background 0.5s;
      }
      .bg-anim {
        position: fixed;
        top: 0; left: 0; width: 100vw; height: 100vh;
        z-index: 0;
        pointer-events: none;
        background: radial-gradient(circle at 20% 30%, #3aeeff33 0%, transparent 60%),
                    radial-gradient(circle at 80% 70%, #6fed6f33 0%, transparent 60%);
        animation: bgmove 10s infinite alternate;
      }
      @keyframes bgmove {
        0% { background-position: 20% 30%, 80% 70%; }
        100% { background-position: 30% 40%, 70% 60%; }
      }
      /* --- Layout --- */
      .main-layout {
        display: flex;
        min-height: 90vh;
        gap: 0;
        position: relative;
        z-index: 1;
      }
      .sidebar {
        min-width: 220px;
        max-width: 260px;
        background: rgba(40,44,52,0.96);
        border-radius: 0 24px 24px 0;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.18);
        padding: 36px 18px 24px 18px;
        position: sticky;
        top: 0;
        height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 2;
      }
      .sidebar nav ul {
        width: 100%;
      }
      .sidebar .nav-item {
        font-size: 1.1rem;
        border-radius: 10px;
        padding: 10px 14px;
        margin-bottom: 10px;
        background: rgba(30,32,38,0.7);
        color: #e0e6ed;
        transition: background 0.3s, color 0.3s;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .sidebar .nav-item:hover {
        background: linear-gradient(90deg, #6fed6f 0%, #3aeeff 100%);
        color: #232526;
      }
      .sidebar img {
        width: 80px;
        border-radius: 16px;
        box-shadow: 0 2px 12px #3aeeff33;
        margin-bottom: 10px;
      }
      .sidebar .welcome {
        color:#6fed6f; font-weight:600; text-align:center; margin-top:10px;
      }
      /* --- Main Content --- */
      .content-area {
        flex: 1;
        padding: 36px 36px 48px 36px;
        border-radius: 24px;
        background: rgba(30, 32, 38, 0.92);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
        margin: 24px 30px 30px 20px;
        min-width: 0;
        max-height: 85vh;
        overflow-y: auto;
        position: relative;
        scrollbar-width: none;
      }
      .hero {
        margin-bottom: 32px; text-align: center;
      }
      .hero h1 {
        font-size:2.5rem; color:#3aeeff; font-weight:700; margin-bottom:10px;
        letter-spacing: 1px;
        text-shadow: 0 2px 16px #3aeeff33;
      }
      .hero p {
        color:#e0e6ed; font-size:1.1rem; margin-bottom:18px;
      }
      .progress-container {
        justify-content:center;
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .progress-bar-background {
        background: rgba(255,255,255,0.08);
        height: 12px;
        width: 320px;
        border-radius: 8px;
        box-shadow: 0 2px 12px #3aeeff22;
      }
      .progress-bar {
        background: linear-gradient(90deg, #6fed6f 0%, #3aeeff 100%);
        height: 100%;
        width: 0;
        border-radius: 8px;
        box-shadow: 0 2px 12px #6fed6f44;
        transition: width 0.7s cubic-bezier(0.23, 1, 0.32, 1);
      }
      #progress-text {
        margin-left: 10px;
        color: #6fed6f;
        font-weight: bold;
        font-size: 18px;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px #6fed6f33;
      }
      /* --- Dropdown Cards --- */
      .topics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(320px,1fr));
        gap: 28px;
      }
      .dropdown.card {
        background: rgba(40,44,52,0.90);
        border-radius: 16px;
        box-shadow: 0 2px 12px #3aeeff22;
        padding: 18px 18px 8px 18px;
        transition: transform 0.18s cubic-bezier(.4,2,.6,1), box-shadow 0.18s;
        cursor: pointer;
        position: relative;
        overflow: visible;
      }
      .dropdown.card:hover {
        transform: translateY(-6px) scale(1.025);
        box-shadow: 0 8px 32px #3aeeff55;
        border: 1.5px solid #3aeeff;
      }
      .dropdown.card.active {
        border: 2px solid #6fed6f;
        box-shadow: 0 8px 32px #6fed6f55;
      }
      .dropdown a {
        font-size: 20px;
        text-decoration: none;
        padding: 14px 18px;
        display: block;
        background: rgba(40, 44, 52, 0.7);
        border-radius: 8px;
        color: #e0e6ed;
        margin-bottom: 6px;
        transition: background 0.3s, color 0.3s, box-shadow 0.3s;
        box-shadow: 0 2px 8px #3aeeff11;
        position: relative;
        overflow: hidden;
      }
      .dropdown a:hover {
        background: linear-gradient(90deg, #3aeeff 0%, #6fed6f 100%);
        color: #232526;
        box-shadow: 0 4px 24px #3aeeff44;
      }
      .dropdown .dropdown-arrow {
        float: right;
        transition: transform 0.3s;
      }
      .dropdown.card.active .dropdown-arrow {
        transform: rotate(90deg);
      }
      .dropdown ul {
        opacity: 0;
        max-height: 0;
        transition: opacity 0.4s cubic-bezier(0.23, 1, 0.32, 1), max-height 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        pointer-events: none;
        background: rgba(40, 44, 52, 0.95);
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(58,238,255,0.08);
        margin-top: 8px;
        padding: 0 12px 8px 12px;
        overflow-y: auto;
        max-height: 320px;
        scrollbar-width: none;
      }
      .dropdown ul:not(.hidden) {
        opacity: 1;
        max-height: 320px;
        pointer-events: auto;
      }
      .dropdown ul li {
        margin: 8px 0;
        animation: scaleIn 0.4s cubic-bezier(0.23, 1, 0.32, 1);
      }
      @keyframes scaleIn {
        0% { transform: scale(0.95); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
      }
      /* --- Floating Action Button & Theme Toggle --- */
      .fab-suggest {
        position: fixed;
        bottom: 36px;
        right: 36px;
        z-index: 1002;
        background: linear-gradient(90deg, #3aeeff 0%, #6fed6f 100%);
        color: #232526;
        border: none;
        border-radius: 50%;
        width: 64px; height: 64px;
        font-size: 2rem;
        box-shadow: 0 4px 24px #3aeeff44;
        cursor: pointer;
        display: flex; align-items: center; justify-content: center;
        transition: transform 0.2s;
      }
      .fab-suggest:hover {
        transform: scale(1.08) rotate(-8deg);
        background: linear-gradient(90deg, #6fed6f 0%, #3aeeff 100%);
      }
      
      
      /* --- Responsive --- */
      @media (max-width: 1100px) {
        .main-layout { flex-direction: column; }
        .sidebar { position: static; width: 100%; border-radius: 0; height: auto; }
        .content-area { margin: 24px 0 0 0; border-radius: 0; }
      }
      @media (max-width: 700px) {
        .content-area { padding: 12px 2vw; }
        .sidebar { padding: 18px 4vw; }
        .topics-grid { grid-template-columns: 1fr; gap: 16px; }
        .fab-suggest { right: 12px; bottom: 12px; width: 48px; height: 48px; font-size: 1.3rem; }
        .theme-toggle-btn { right: 12px; top: 12px; width: 36px; height: 36px; font-size: 1.1rem; }
      }
    </style>
