<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  
  <!-- Google Fonts for typography -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/profile.css">
  <link rel="stylesheet" href="/css/nav.css">
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      background: #181c24 !important;
      color: #e0e6ed !important;
    }
    .content, .left-column, .right-column {
      background: #232a34 !important;
      color: #e0e6ed !important;
      box-shadow: 0 6px 24px rgba(33, 211, 151, 0.08), 0 1.5px 6px rgba(10, 143, 220, 0.08);
    }
    .left-column, .right-column {
      border-radius: 18px !important;
    }
    .left-column h1, .left-column h2, .right-column h2 {
      color: #21d397 !important;
    }
    .detail-item i {
      color: #21d397 !important;
    }
    .left-column a, .delete-btn {
      background: linear-gradient(90deg, #21d397 0%, #0a8fdc 100%) !important;
      color: #fff !important;
      border: none;
      border-radius: 6px;
      transition: background 0.3s;
    }
    .left-column a:hover, .delete-btn:hover {
      background: linear-gradient(90deg, #0a8fdc 0%, #21d397 100%) !important;
      color: #fff !important;
    }
    .right-column ul li {
      background: #232a34 !important;
      border-radius: 12px;
      margin-bottom: 18px;
      box-shadow: 0 2px 8px rgba(33, 211, 151, 0.08);
      transition: box-shadow 0.2s, background 0.2s;
    }
    .right-column ul li:hover {
      background: #1e222b !important;
      box-shadow: 0 8px 24px rgba(33, 211, 151, 0.18);
    }
    .profile-item {
      color: #21d397 !important;
      font-weight: 500;
      border-radius: 6px;
      transition: background 0.2s, color 0.2s;
    }
    .profile-item:hover {
      background: #21d397 !important;
      color: #181c24 !important;
    }
    .profile-menu {
      background: #232a34 !important;
      color: #e0e6ed !important;
      border: 1.5px solid #21d397 !important;
      border-radius: 12px !important;
      box-shadow: 0px 4px 16px rgba(33,211,151,0.10) !important;
    }
    .profile-menu .divider {
      border-bottom: 1px solid #21d397 !important;
    }
    .profile-icon {
      border: 2px solid #21d397 !important;
      background: #232a34 !important;
    }
    .logo, .logo span {
      color: #21d397 !important;
      font-weight: 700;
      font-size: 2rem;
      letter-spacing: 1px;
      text-shadow: 0 2px 8px rgba(33,211,151,0.10);
    }
    .logo span {
      color: #0a8fdc !important;
    }
    .hamburger {
      color: #21d397 !important;
    }
    .hamburger:hover {
      color: #0a8fdc !important;
    }
    .profile-card {
      background: linear-gradient(135deg, #232a34 80%, #21d397 100%);
      border-radius: 22px;
      box-shadow: 0 8px 32px rgba(33, 211, 151, 0.12), 0 2px 8px rgba(10, 143, 220, 0.10);
      padding: 36px 32px 28px 32px;
      margin-bottom: 32px;
      position: relative;
      overflow: hidden;
      animation: fadeIn 1s;
    }
    .profile-card .profile-avatar {
      width: 110px;
      height: 110px;
      border-radius: 50%;
      border: 4px solid #21d397;
      object-fit: cover;
      margin-bottom: 18px;
      box-shadow: 0 2px 12px rgba(33,211,151,0.10);
      background: #181c24;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    .profile-card .profile-username {
      color: #21d397;
      font-size: 2rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 6px;
      letter-spacing: 1px;
    }
    .profile-card .profile-email {
      color: #b0bac9;
      font-size: 1rem;
      text-align: center;
      margin-bottom: 18px;
    }
    .profile-card .profile-details {
      margin-top: 18px;
      margin-bottom: 18px;
    }
    .profile-card .profile-details .detail-item {
      justify-content: center;
      font-size: 1.1rem;
      margin-bottom: 10px;
    }
    .profile-card .profile-progress {
      margin: 18px 0;
    }
    .profile-card .progress-bar-bg {
      background: #1e222b;
      border-radius: 8px;
      height: 12px;
      width: 100%;
      margin-bottom: 6px;
      overflow: hidden;
    }
    .profile-card .progress-bar-fill {
      background: linear-gradient(90deg, #21d397 0%, #0a8fdc 100%);
      height: 100%;
      width: 80%; /* Example: 80% profile completion */
      border-radius: 8px;
      transition: width 0.5s;
    }
    .profile-card .progress-label {
      color: #21d397;
      font-size: 0.95rem;
      text-align: right;
      margin-bottom: 0;
    }
    .profile-card .profile-actions {
      display: flex;
      justify-content: center;
      gap: 18px;
      margin-top: 18px;
    }
    .profile-card .profile-actions a {
      padding: 8px 18px;
      font-size: 1rem;
    }
    .fab-post-blog {
      position: fixed;
      bottom: 38px;
      right: 38px;
      background: linear-gradient(90deg, #21d397 0%, #0a8fdc 100%);
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 62px;
      height: 62px;
      box-shadow: 0 4px 16px rgba(33,211,151,0.18);
      font-size: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 2000;
      transition: background 0.3s;
    }
    .fab-post-blog:hover {
      background: linear-gradient(90deg, #0a8fdc 0%, #21d397 100%);
    }
    .blogs-list {
      margin-top: 10px;
    }
    .blog-card {
      display: flex;
      align-items: flex-start;
      gap: 18px;
      background: #232a34;
      border-radius: 14px;
      box-shadow: 0 2px 8px rgba(33, 211, 151, 0.08);
      padding: 18px 20px;
      margin-bottom: 18px;
      transition: box-shadow 0.2s, background 0.2s;
      position: relative;
    }
    .blog-card:hover {
      background: #1e222b;
      box-shadow: 0 8px 24px rgba(33, 211, 151, 0.18);
    }
    .blog-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: #181c24;
      border: 2px solid #21d397;
      object-fit: cover;
      margin-top: 6px;
    }
    .blog-content {
      flex: 1;
    }
    .blog-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: #21d397;
      margin-bottom: 4px;
      text-decoration: none;
      display: inline-block;
    }
    .blog-snippet {
      color: #b0bac9;
      font-size: 1rem;
      margin-bottom: 6px;
    }
    .blog-date {
      color: #0a8fdc;
      font-size: 0.95rem;
      margin-bottom: 0;
    }
    .blog-actions {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-left: 12px;
    }
    .delete-btn {
      margin-top: 8px;
      width: 90px;
      align-self: flex-end;
    }
    @media (max-width: 900px) {
      .profile-container {
        flex-direction: column;
        gap: 24px;
      }
      .fab-post-blog {
        right: 18px;
        bottom: 18px;
      }
    }
    @media (max-width: 768px) {
      .content, .left-column, .right-column {
        background: #232a34 !important;
        color: #e0e6ed !important;
      }
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <a href="/api/user/authfront" rel="noopener noreferrer">
        <div class="logo">DSA <span>Hub</span></div>
      </a>
      <nav id="nav-menu" class="nav-links">
        <ul>
          <li><a href="/api/user/home">Solve Questions</a></li>
          <li><a href="/blog/add-new">Post Blog</a></li>
          <li class="hidden-links"><a href="/api/user/sheets">Explore Sheets</a></li>
          <li class="hidden-links"><a href="/blog/show-blogs">See All Blogs</a></li>
        </ul>
      </nav>
      <div class="auth-buttons" id="auth-container">
        <% if (user) { %>
          <div class="profile-container" style="position: relative;">
            <a href="javascript:void(0);" onclick="toggleProfileMenu()">
              <img src="/images/pf.png" alt="Profile Icon" class="profile-icon"/>
            </a>
            <!-- Profile Action List (Initially Hidden) -->
            <div id="profile-menu" class="profile-menu">
              <img src="/images/pf.png" alt="Profile Icon" class="profile-icon" style="width: 100px; border-radius: 500px; margin-left: 45px; margin-top: 6px;"/>
              <div style="color: #21d397; font-weight: bold; text-align: center;"><%= user.username %></div>
              <div style="color: #b0bac9; font-size: 10px; text-align: center;"><%= user.email %></div>
              <div class="divider" style="margin: 8px 0;"></div>
              <a href="/api/user/profile" class="profile-item">View Profile</a>
              <a href="/api/user/profile-edit" class="profile-item">Edit Profile</a>
              <a href="/api/user/logout" class="profile-item">Logout</a>
            </div>
          </div>
        <% } else { %>
          <a href="/api/user/signin" class="btn login-btn">Login</a>
          <a href="/api/user/signup" class="btn signup-btn">Signup</a>
        <% } %>
      </div>
      <!-- Hamburger Menu Button -->
      <button id="menu-btn" class="hamburger">&#9776;</button>
    </div>
  </header>

  <div class="container">
    <div class="content">
      <div class="profile-container">
        <!-- Left Column: Profile Card -->
        <div class="left-column" style="flex: 1;">
          <div class="profile-card">
            <img src="/images/pf.png" alt="Profile Avatar" class="profile-avatar"/>
            <div class="profile-username"><%= user.username %></div>
            <div class="profile-email"><i class="fas fa-envelope"></i> <%= user.email %></div>
            <div class="profile-details">
              <div class="detail-item">
                <i class="fas fa-user"></i>
                <span><strong>Username:</strong> <%= user.username %></span>
              </div>
              <!-- Add more details here if needed -->
            </div>
            <div class="profile-progress">
              <div class="progress-bar-bg">
                <div class="progress-bar-fill"></div>
              </div>
              <div class="progress-label">Profile Completion: 80%</div>
            </div>
            <div class="profile-actions">
              <a class="hover-accent" href="/api/user/profile-edit"><i class="fas fa-edit"></i> Edit</a>
              <a class="hover-accent" href="/api/user/logout"><i class="fas fa-sign-out-alt"></i> Log Out</a>
            </div>
          </div>
        </div>
        <!-- Right Column: Blogs -->
        <div class="right-column" style="flex: 2;">
          <h2 style="display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-blog"></i> Your Blogs
          </h2>
          <% if (blogs.length === 0) { %>
            <p>You haven't created any blogs yet.</p>
          <% } else { %>
            <div class="blogs-list">
              <% blogs.forEach(function(blog) { %>
                <div class="blog-card">
                  <img src="/images/pf.png" alt="Blog Avatar" class="blog-avatar"/>
                  <div class="blog-content">
                    <a href="/blog/<%= blog._id %>" class="blog-title"><%= blog.title %></a>
                    <div class="blog-snippet"><%= blog.body.substring(0, 100) %>...</div>
                    <div class="blog-date"><i class="fas fa-calendar-alt"></i> <%= blog.createdAt.toDateString() %></div>
                  </div>
                  <div class="blog-actions">
                    <a href="/blog/delete/<%= blog._id %>" class="delete-btn" onclick="return confirm('Are you sure you want to delete this blog?');">
                      <i class="fas fa-trash"></i> Delete
                    </a>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    <!-- Floating Action Button for Posting Blog -->
    <a href="/blog/add-new" class="fab-post-blog" title="Post Blog">
      <i class="fas fa-plus"></i>
    </a>
  </div>
  <script>
    // Toggle Hamburger Menu
    document.getElementById("menu-btn").addEventListener("click", function(event) {
      var menu = document.getElementById("nav-menu");
      var button = document.getElementById("menu-btn");
      
      menu.classList.toggle("show");
  
      // Toggle between hamburger and close (✖) icon
      if (menu.classList.contains("show")) {
        button.innerHTML = "&#10006;"; // Cross icon (✖)
        button.style.color = "#fff"; // Optional: Change color
      } else {
        button.innerHTML = "&#9776;"; // Hamburger icon (☰)
      }
  
      event.stopPropagation(); // Prevent event from bubbling up
    });
  
    // Close menu when clicking outside
    document.addEventListener("click", function(event) {
      var menu = document.getElementById("nav-menu");
      var button = document.getElementById("menu-btn");
  
      if (!menu.contains(event.target) && event.target !== button) {
        menu.classList.remove("show");
        button.innerHTML = "&#9776;"; // Reset to hamburger icon
      }
    });
  
    // Profile Menu Toggle
    function toggleProfileMenu(event) {
      var menu = document.getElementById("profile-menu");
      menu.style.display = menu.style.display === "block" ? "none" : "block";
      event.stopPropagation(); // Prevent closing when clicking inside
    }
  
    // Close profile menu when clicking outside
    document.addEventListener("click", function(event) {
      var profileMenu = document.getElementById("profile-menu");
      if (!event.target.closest(".profile-container")) {
        profileMenu.style.display = "none";
      }
    });
  </script>
  
</body>
</html>